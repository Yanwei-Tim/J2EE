public final class OperateLogFormator {

    /**
     * Utility classes should not have a public or default constructor
     */
    private OperateLogFormator() {

    }

    public static StringBuffer format(StringBuffer sb, String name, Object value) {
        sb.append(" ").append(name).append("=").append(value).append(" ");
        return sb;
    }
}
